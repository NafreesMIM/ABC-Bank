<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - ABC Bank</title>

    <!-- Include necessary stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-rGyoCBvZN7hZL3GvxnFgtSRS7de9aCitl8B6ZgkzF8eS4M5DAew9OnQa/hbpCJl" crossorigin="anonymous">


    <!-- Optional: Add your custom stylesheet for additional styling -->
    <!-- <link href="path/to/your/custom.css" rel="stylesheet"> -->
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fontawesome.com/v4/icons/">

</head>
<body>
    <div class="container-fluid-left">
        <nav>
            <ul class="flatecen">
                <li class="icon"><h1>ABC Bank</h1></li>
            </ul>
        </nav>
    </div>



    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Bank")">
                                <i class="bi bi-bank"></i> Banks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Branch")">
                                <i class="bi bi-geo-alt"></i> Branches
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "BankAccount")">
                                <i class="bi bi-credit-card"></i> Bank Accounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customer")">
                                <i class="bi bi-person"></i> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Transaction")">
                                <i class="bi bi-cash"></i> Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "User")">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Page content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Include necessary scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: Add your custom scripts if needed -->
    <!-- <script src="path/to/your/custom.js"></script> -->
</body>
</html>
